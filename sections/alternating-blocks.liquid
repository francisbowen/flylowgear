<div class="{% if section.settings.full_width %}container-fluid to-edges{% else %}container{% endif %} custom-padding-section section-padding-{{ section.settings.section_padding }}">
  {% for block in section.blocks %}
    {% capture evens %}{{ forloop.index | modulo:2 }}{% endcapture %}
    <div class="row  align-items-center" style="background-color:{{block.settings.benefit_color}};">
      
      <div class="col-md-30{% if evens == '0' %} push-md-30{% endif %}">
        <div class="text-center">
          <h3 style="color:{{block.settings.title_color}};">{{block.settings.benefit_title}}</h3>
          <p style="color:{{block.settings.copy_color}};">{{block.settings.benefit_copy}}</p>
          {%if block.settings.link_url != ""%}
          <a href="{{ block.settings.link_url }}" class="btn" style="background-color:{{block.settings.button_color}};color:{{block.settings.buttontext_color}};">
          {% if block.settings.link_text != "" %}{{block.settings.link_text}}{%else%}Shop Now{%endif%}
        </a>
          {%endif%}
        </div>
      </div>

      <div class="col-md-30{% if evens == '0' %} pull-md-30{% endif %} image-altblock" style="background-image:url('{{ block.settings.benefit_bg | img_url: '1024x1024' }}'); height:{{ section.settings.row_size }};"></div>

    </div>
  {% endfor %} 
</div>

{% schema %}
  {
    "name": "Alternating Image Blocks",
    "class": "index-section index-section--alternate-blocks",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Brand Benefit Rows"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Make this full width?",
        "default": true
      },
      {
        "type": "select",
        "id": "row_size",
        "label": "Row size",
        "default": "500px",
        "options": [
          {
            "value": "250px",
            "label": "Small"
          },
          {
            "value": "500px",
            "label": "Medium"
          },
          {
            "value": "750px",
            "label": "Large"
          }
        ]
      },
      {
        "type": "select",
        "id": "section_padding",
        "label": "Section padding",
        "default": "medium",
        "options": [
          {
            "label": "None",
            "value": "none"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "row",
        "name": "Row",
        "settings": [
          {
            "type": "header",
            "content": "Benefits Row"
          },
          {
            "type": "color",
            "id": "benefit_color",
            "label": "Background color for row",
            "default": "#f7f7f7"
          },
          {
            "type": "image_picker",
            "id": "benefit_bg",
            "label": "Background image for image size",
            "info": "Best at minimum 800x800px"
          },
          {
            "type": "text",
            "id": "benefit_title",
            "label": "Title"
          },
          {
            "type": "color",
            "id": "title_color",
            "label": "Title color",
            "default": "#f7f7f7"
          },
          {
            "type": "textarea",
            "id": "benefit_copy",
            "label": "Short copy"
          },
          {
            "type": "color",
            "id": "copy_color",
            "label": "Copy color",
            "default": "#f7f7f7"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Button text"
          },
          {
            "type": "color",
            "id": "button_color",
            "label": "Button color",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "buttontext_color",
            "label": "Button Text color",
            "default": "#ffffff"
          },
          {
            "type": "text",
            "id": "link_url",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Alternating content blocks",
        "category": "Image",
        "blocks": [
          {
            "type": "row"
          }
        ]
      }
    ]
  }
{% endschema %}