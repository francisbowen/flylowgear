    }
    $error.hide().text('');
    $loadingbtn.addClass('spinning');
    $.ajax({
      type: "POST",
      url: integro_url,
      data: $(this).find('input:not(".hide")','select:not(".hide")','textarea:not(".hide")').serialize(),
      success: function(data) {
        console.log(data);
        $loadingbtn.removeClass('spinning');
